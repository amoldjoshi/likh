<div class='dashboard widget-container'>
  <h3 class='dark'>
    <span class='ui-icon ui-icon-link'> </span>
    <%= _("Inbound links") %>
  </h3>
  <div class='widget-content'>
    <% if @inbound_links.nil? %>
      <%= _('You have no internet connection') %>
    <% else %>
    <ol class='dashboardList'>
      <% if @inbound_links.size == 0 %>
        <li><%= _("No one made a link to you yet") %></li>
      <% else %>
        <% for link in @inbound_links -%>
          <li>
            <h4>
              <%= sprintf("%s %s %s %s %s",
                    link_to(link.author, link.link),
                    _("made a link to you on"),
                    link.date.strftime(this_blog.date_format),
                    _("at"),
                    link.date.strftime(this_blog.time_format)) %>
            </h4>
            <p><%= link.description.strip_html.slice(0, 300) %></p>
          </li>
        <% end %>
      <% end %>
    </ul>
  <% end %>
  </div>
</div>
