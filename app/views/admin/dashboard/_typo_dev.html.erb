<div class='dashboard widget-container'>
  <h3 class='dark'>
    <span class='ui-icon ui-icon-signal-diag'> </span>
    <%= _("Latest news from the Typo development blog") %>
  </h3>
  <div class='widget-content'>
    <% if @typo_links.nil? %>
      <%= _('You have no internet connection') %>
    <% else %>
    <ol class='dashboardList'>
      <% if @typo_links.size == 0 %>
        <li><%= _("Oh no, nothing new") %></li>
      <% else %>
        <% @typo_links.each do |link| -%>
          <li <%= alternate_class %>>
            <h4><%= link_to("#{link.title}</strong>".html_safe, link.link) %> <%= display_date_and_time(link.date) %></h4>
            <p><%= link.description.strip_html.slice(0, 300) %>...</p>
          </li>
        <% end %>
      <% end %>
    </ol>
  <% end %>
  </div>
</div>
