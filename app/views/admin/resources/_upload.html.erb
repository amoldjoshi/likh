<%= form_tag_with_upload_progress({:action => 'upload'}, { :begin => "new Effect.Appear('status')", :finish => "$('message').innertHTML = arguments[0]" }) %>

<div class='widget-container'>
  <h3 class='light'><span class='ui-icon ui-icon-disk'> </span><%= _('Upload a File to your Site') %></h3>
  <div class='widget-content'>
    <div class='setting'>
      <label for="upload_filename" class='float'><%= _('File') %>:</label>
      <div class='input_text'>
        <%= file_field('upload', 'filename') -%>
        <%= submit_tag(_('Upload'), {:class => 'save'}) -%>
      </div>
    </div>

    <div id='status' class='ui-progressbar ui-widget ui-widget-content ui-corner-all' style="display: none"><%= upload_status_tag %></div>
    <div id="message"><%= @message %></div>
  </div>
</div>
